// Leave as CommonJS.
// To start server, either run "yarn build" then "yarn start" or simply run "yarn dev"

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",          // <-- switch to CommonJS
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  }
}